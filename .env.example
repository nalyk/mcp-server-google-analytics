# Google Analytics Configuration
# Copy this file to .env and fill in your actual values

PORT=3001

# MCP Server Configuration
MCP_AUTH_MODE=none
MCP_HTTP_HOST=0.0.0.0
MCP_CORS_ORIGINS=*

# Google Analytics Property ID (required)
# Format: properties/123456789
GA_PROPERTY_ID=properties/your-property-id

# Google Analytics Project ID (required)
# Your Google Cloud Project ID
GA_PROJECT_ID=your-google-cloud-project-id

# Google Cloud Service Account Key Path (required)
# Path to your service account JSON key file
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# Alternative: Service Account Key as JSON string (optional)
# If you prefer to set the key as an environment variable instead of a file
# GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}

# MCP Server Configuration (optional)
# Server name for MCP identification
MCP_SERVER_NAME=google-analytics-server

# Logging Configuration (optional)
LOG_LEVEL=info

# API Configuration (optional)
# Request timeout in milliseconds
REQUEST_TIMEOUT=30000

# Rate limiting (optional)
# Maximum requests per minute
MAX_REQUESTS_PER_MINUTE=60

# OAuth 2.0 Authentication Configuration (optional)
# Auth0 domain for JWT validation
AUTH0_DOMAIN=your-auth0-domain.auth0.com

# Auth0 audience for JWT validation
AUTH0_AUDIENCE=https://your-api-audience

# Required resource indicator in JWT token (optional)
# This enforces that the access token contains a specific resource indicator
MCP_SERVER_RESOURCE=https://mcp-server-google-analytics

# Development access token (optional)
# For development/testing purposes only - use proper OAuth flow in production
# MCP_ACCESS_TOKEN=your-development-jwt-token